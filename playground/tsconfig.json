  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "strict": true,
    "isolatedModules": true
  },
  "references": [],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
